<application>
    <name>SpaceNavigator App</name>
    <module>
        <name>yarpdev</name>
        <parameters>--device SpaceNavigator --period 5 --name /spacenavigator --ports "(mouse:o buttons:o)" --channels 8 --mouse:o 0 5 0 5 --buttons:o 6 7 0 1</parameters>
        <node>localhost</node>
    </module>
    <module>
        <name>yarpscope</name>
        <parameters>--remote /spacenavigator/mouse:o --index "(0 1 2 3 4 5)" --color "(Red Green Blue LightRed LightGreen LightBlue)" --min -1 --max 1</parameters>
        <prefix>/spacenavigator/mouse:o</prefix>
        <node>localhost</node>
    </module>
</application>

